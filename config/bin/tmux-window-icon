#!/usr/bin/env bash

set -euo pipefail

if [ -z "$TMUX" ]; then
	echo "This command must be run in tmux" >&2
	exit 1
fi

window_id="$1"

case "$(tmux list-panes -t "$window_id" -F '#{pane_current_command}')" in
*'nvim'*)
	# use vim icon instead of neovim icon
	# so HackGen35 Console NF doesn't have the neovim icon
	echo ""
	;;
*)
	echo ''
	;;
esac
