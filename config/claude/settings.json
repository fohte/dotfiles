{
  "env": {
    "CLAUDE_CODE_DISABLE_FEEDBACK_SURVEY": "1"
  },
  "includeCoAuthoredBy": true,
  "permissions": {
    "allow": [
      "Bash(* --help)",
      "Bash(* --version)",
      "Bash([:*)",
      "Bash(a ai draft:*)",
      "Bash(a ai pr-draft:*)",
      "Bash(a ai review wait:*)",
      "Bash(a gh check-pr-review:*)",
      "Bash(a gh issue-agent pull:*)",
      "Bash(a gh issue-agent view:*)",
      "Bash(actionlint:*)",
      "Bash(bun pm ls:*)",
      "Bash(cargo build:*)",
      "Bash(cargo check:*)",
      "Bash(cargo clippy:*)",
      "Bash(cargo doc:*)",
      "Bash(cargo fmt:*)",
      "Bash(cargo llvm-cov:*)",
      "Bash(cargo metadata:*)",
      "Bash(cargo search:*)",
      "Bash(cargo search:*)",
      "Bash(cargo test:*)",
      "Bash(cargo tree:*)",
      "Bash(cat:*)",
      "Bash(cd:*)",
      "Bash(chmod +x:*)",
      "Bash(curl -X GET:*)",
      "Bash(curl -s -X GET:*)",
      "Bash(date:*)",
      "Bash(echo:*)",
      "Bash(find:*)",
      "Bash(gcloud * describe *)",
      "Bash(gcloud * list *)",
      "Bash(gh * list *)",
      "Bash(gh * view *)",
      "Bash(gh api -X GET:*)",
      "Bash(gh browse:*)",
      "Bash(gh pr checks:*)",
      "Bash(gh pr diff:*)",
      "Bash(gh run watch:*)",
      "Bash(gh search:*)",
      "Bash(ghq get:*)",
      "Bash(ghq list:*)",
      "Bash(git add:*)",
      "Bash(git commit -m:*)",
      "Bash(git commit:*)",
      "Bash(git fetch:*)",
      "Bash(git log:*)",
      "Bash(git ls-tree:*)",
      "Bash(git merge origin/master:*)",
      "Bash(git mv:*)",
      "Bash(git pull:*)",
      "Bash(git push:*)",
      "Bash(git rev-parse:*)",
      "Bash(git show:*)",
      "Bash(git status:*)",
      "Bash(grep:*)",
      "Bash(head:*)",
      "Bash(jq:*)",
      "Bash(ls:*)",
      "Bash(mkdir:*)",
      "Bash(ni)",
      "Bash(npm view:*)",
      "Bash(nr build:*)",
      "Bash(nr format:*)",
      "Bash(nr lint:*)",
      "Bash(nr test:*)",
      "Bash(rg:*)",
      "Bash(ruby -c:*)",
      "Bash(shellcheck:*)",
      "Bash(shfmt:*)",
      "Bash(sort:*)",
      "Bash(task:*)",
      "Bash(terraform fmt)",
      "Bash(terraform fmt:*)",
      "Bash(test:*)",
      "Bash(touch:*)",
      "Bash(tree:*)",
      "Bash(true)",
      "Bash(wc:*)",
      "Edit(//tmp/**)",
      "Edit(//var/folders/**/T/**)",
      "Edit(~/.cache/gh-issue-agent/**)",
      "Read(//tmp/**)",
      "Read(//var/folders/**/T/**)",
      "Read(~/.cache/gh-issue-agent/**)",
      "Read(~/.claude/**)",
      "Read(~/.local/share/nvim/lazy)",
      "Read(~/Dropbox)",
      "Read(~/Library/CloudStorage/Dropbox)",
      "Read(~/ghq/**)",
      "Skill",
      "WebFetch",
      "WebSearch",
      "mcp__context7"
    ],
    "deny": [
      "Bash(gh repo set-default:*)",
      "Bash(git commit --amend:*)",
      "Bash(git push --force-with-lease:*)",
      "Bash(git push --force:*)",
      "Bash(git push -f:*)",
      "Bash(rm -rf:*)",
      "NotebookEdit",
      "Read(.envrc)"
    ],
    "defaultMode": "acceptEdits"
  },
  "model": "opus",
  "hooks": {
    "Notification": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "claude-notify"
          }
        ]
      }
    ]
  },
  "statusLine": {
    "type": "command",
    "command": "~/.claude/statusline.ts"
  },
  "enabledPlugins": {
    "criticalthink@criticalthink": true
  },
  "alwaysThinkingEnabled": false,
  "promptSuggestionEnabled": false
}
