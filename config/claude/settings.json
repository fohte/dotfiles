{
  "env": {
    "CLAUDE_CODE_DISABLE_FEEDBACK_SURVEY": "1"
  },
  "includeCoAuthoredBy": true,
  "permissions": {
    "allow": [
      "Bash(* --help)",
      "Bash(* --version)",
      "Bash(actionlint:*)",
      "Bash(bun pm ls:*)",
      "Bash(cargo build:*)",
      "Bash(cargo clippy:*)",
      "Bash(cargo fmt:*)",
      "Bash(cargo test:*)",
      "Bash(cat:*)",
      "Bash(cd:*)",
      "Bash(chmod +x:*)",
      "Bash(a ai pr-draft:*)",
      "Bash(curl -X GET:*)",
      "Bash(echo:*)",
      "Bash(find:*)",
      "Bash(gh issue list:*)",
      "Bash(gh issue view:*)",
      "Bash(gh pr checks:*)",
      "Bash(gh pr diff:*)",
      "Bash(gh pr list:*)",
      "Bash(gh pr view:*)",
      "Bash(gh release list:*)",
      "Bash(gh repo list:*)",
      "Bash(gh repo view:*)",
      "Bash(gh run list:*)",
      "Bash(gh run view:*)",
      "Bash(gh run watch:*)",
      "Bash(gh search:*)",
      "Bash(gh-check-pr-review:*)",
      "Bash(gh-issue-agent pull:*)",
      "Bash(gh-issue-agent view:*)",
      "Bash(ghq get:*)",
      "Bash(ghq list:*)",
      "Bash(git add:*)",
      "Bash(git commit -m:*)",
      "Bash(git commit:*)",
      "Bash(git fetch:*)",
      "Bash(git log:*)",
      "Bash(git ls-tree:*)",
      "Bash(git merge origin/master:*)",
      "Bash(git mv:*)",
      "Bash(git pull:*)",
      "Bash(git push:*)",
      "Bash(git rev-parse:*)",
      "Bash(git show:*)",
      "Bash(git show:*)",
      "Bash(git status:*)",
      "Bash(grep:*)",
      "Bash(head:*)",
      "Bash(ls:*)",
      "Bash(mkdir:*)",
      "Bash(ni)",
      "Bash(nr build:*)",
      "Bash(nr format:*)",
      "Bash(nr lint:*)",
      "Bash(nr test:*)",
      "Bash(rg:*)",
      "Bash(ruby -c:*)",
      "Bash(shellcheck:*)",
      "Bash(shfmt:*)",
      "Bash(task:*)",
      "Bash(terraform fmt)",
      "Bash(terraform fmt:*)",
      "Bash(touch:*)",
      "Edit(//tmp/**)",
      "Edit(//var/folders/**/T/**)",
      "Edit(~/.cache/gh-issue-agent/**)",
      "Read(//tmp/**)",
      "Read(//var/folders/**/T/**)",
      "Read(~/.claude/CLAUDE.md)",
      "Read(~/.local/share/nvim/lazy)",
      "Read(~/Dropbox)",
      "Read(~/Library/CloudStorage/Dropbox)",
      "Read(~/ghq/**)",
      "Skill(check-pr-review)",
      "Skill(commit)",
      "Skill(create-pr)",
      "Skill(delegate-claude)",
      "Skill(github-issue)",
      "Skill(ni)",
      "WebFetch",
      "WebSearch",
      "mcp__codex",
      "mcp__context7"
    ],
    "deny": [
      "Bash(gh repo set-default:*)",
      "Bash(git commit --amend:*)",
      "Bash(git push --force-with-lease:*)",
      "Bash(git push --force:*)",
      "Bash(git push -f:*)",
      "Bash(rm -rf:*)",
      "NotebookEdit",
      "Read(.envrc)"
    ],
    "defaultMode": "acceptEdits"
  },
  "model": "opus",
  "hooks": {
    "Notification": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "claude-notify"
          }
        ]
      }
    ]
  },
  "statusLine": {
    "type": "command",
    "command": "~/.claude/statusline.ts"
  },
  "enabledPlugins": {
    "criticalthink@criticalthink": true
  },
  "alwaysThinkingEnabled": false
}
