{
  "$schema": "https://opencode.ai/config.json",
  "model": "anthropic/claude-opus-4-5",
  "small_model": "anthropic/claude-haiku-4-5",
  "autoupdate": true,
  "mcp": {
    "codex": {
      "type": "remote",
      "url": "https://mcp.codex.com/mcp",
    },
    "context7": {
      "type": "remote",
      "url": "https://mcp.context7.com/mcp",
    },
  },
  "permission": {
    "*": "allow",
    "bash": {
      "*": "ask",
      // allow safe commands
      "* --help": "allow",
      "* --version": "allow",
      "a ai pr-draft*": "allow",
      "actionlint*": "allow",
      "bun pm ls*": "allow",
      "cargo build*": "allow",
      "cargo clippy*": "allow",
      "cargo fmt*": "allow",
      "cargo test*": "allow",
      "cat*": "allow",
      "cd*": "allow",
      "chmod +x*": "allow",
      "curl -X GET*": "allow",
      "echo*": "allow",
      "find*": "allow",
      "gh issue list*": "allow",
      "gh issue view*": "allow",
      "gh pr checks*": "allow",
      "gh pr diff*": "allow",
      "gh pr list*": "allow",
      "gh pr view*": "allow",
      "gh release list*": "allow",
      "gh repo list*": "allow",
      "gh repo view*": "allow",
      "gh run list*": "allow",
      "gh run view*": "allow",
      "gh run watch*": "allow",
      "gh search*": "allow",
      "gh-check-pr-review*": "allow",
      "gh-issue-agent pull*": "allow",
      "gh-issue-agent view*": "allow",
      "ghq get*": "allow",
      "ghq list*": "allow",
      "git add*": "allow",
      "git commit -m*": "allow",
      "git commit*": "allow",
      "git fetch*": "allow",
      "git log*": "allow",
      "git ls-tree*": "allow",
      "git merge origin/master*": "allow",
      "git mv*": "allow",
      "git pull*": "allow",
      "git push*": "allow",
      "git rev-parse*": "allow",
      "git show*": "allow",
      "git status*": "allow",
      "grep*": "allow",
      "head*": "allow",
      "ls*": "allow",
      "mkdir*": "allow",
      "ni": "allow",
      "nr build*": "allow",
      "nr format*": "allow",
      "nr lint*": "allow",
      "nr test*": "allow",
      "rg*": "allow",
      "ruby -c*": "allow",
      "shellcheck*": "allow",
      "shfmt*": "allow",
      "task*": "allow",
      "terraform fmt": "allow",
      "terraform fmt*": "allow",
      "touch*": "allow",
    },
    "edit": {
      "*": "ask",
      "//tmp/**": "allow",
      "//var/folders/**/T/**": "allow",
      "~/.cache/gh-issue-agent/**": "allow",
    },
    "read": {
      "*": "allow",
      ".envrc": "deny",
      ".env": "deny",
      ".env.*": "deny",
      ".env.example": "allow",
      "//tmp/**": "allow",
      "//var/folders/**/T/**": "allow",
      "~/.claude/**": "allow",
      "~/.local/share/nvim/lazy/**": "allow",
      "~/Dropbox/**": "allow",
      "~/Library/CloudStorage/Dropbox/**": "allow",
      "~/ghq/**": "allow",
    },
  },
}
