{
  $schema: 'https://docs.renovatebot.com/renovate-schema.json',
  extends: ['github>fohte/renovate-config:base.json5'],
  mise: {
    managerFilePatterns: ['/config/mise/home-config\\.toml/'],
  },
  packageRules: [
    {
      groupName: 'fzf updates',
      matchPackageNames: ['junegunn/fzf', 'junegunn/fzf/fzf-tmux'],
    },
    {
      groupName: 'mise tools',
      matchManagers: ['mise'],
      schedule: ['after 9am on saturday'],
      automerge: true,
      matchUpdateTypes: ['patch'],
    },
    // Prevent Renovate from pinning Node.js to an exact version in mise config.
    // The current version (e.g., "23.11.1") is already precise enough, and
    // Renovate's default 'pin' strategy would create unnecessary PRs.
    {
      matchManagers: ['mise'],
      matchDatasources: ['node-version'],
      rangeStrategy: 'bump',
    },
  ],
}
