#!/usr/bin/env bash

set -euo pipefail

usage() {
  cat << EOF
usage: yabai-layout <layout>
  layout: 1, 2
EOF
}

if [ $# -ne 1 ]; then
  usage
  exit 1
fi

# { <window-name>: <window-id> }
window_ids="$(yabai -m query --windows | jq -r 'map({ (.app): .id }) | add')"

# usage: window-id <window-name>
window-id() {
  name="$1"
  echo "$window_ids" | jq --arg name "$name" -r '.[$name]'
}

# usage: set-window <window-id> <grid>
set-window() {
  id="$1"
  grid="$2"
  if [ -z "$id" ] || [ "$id" = 'null' ]; then
    exit
  fi
  yabai -m window "$id" --grid "$grid"
}

layout="$1"

case "$layout" in
  'wide-1')
    # for ultra wide monitor
    #  <--- 20 % ---> <-------- 40 % ----------> <-------- 40 % ---------->
    # +--------------+--------------------------+--------------------------+
    # |  Calender &  |                          |                          |
    # |   Logseq &   |         WezTerm          |           Arc            |
    # |   Todoist    |                          |                          |
    # +--------------+--------------------------+--------------------------+
    set-window "$(window-id 'カレンダー')" 1:10:0:0:2:1
    set-window "$(window-id 'Logseq')" 1:10:0:0:2:1
    set-window "$(window-id 'Todoist')" 1:10:0:0:2:1
    set-window "$(window-id 'WezTerm')" 1:10:2:0:4:1
    set-window "$(window-id 'Arc')" 1:10:6:0:4:1
    ;;

  'wide-2')
    # for ultra wide monitor
    #  <--- 20 % ---> <-------- 60 % ----------> <--- 20 % --->
    # +--------------+--------------------------+--------------+
    # |  Calendar    |         WezTerm          |    Logseq    |
    # |              |            &             |--------------|
    # |              |           Arc            |    Todoist   |
    # +--------------+--------------------------+--------------+
    set-window "$(window-id 'カレンダー')" 1:10:0:0:2:1
    set-window "$(window-id 'WezTerm')" 1:10:2:0:6:1
    set-window "$(window-id 'Arc')" 1:10:2:0:6:1
    set-window "$(window-id 'Logseq')" 2:10:8:0:2:1
    set-window "$(window-id 'Todoist')" 2:10:8:1:2:1
    ;;

  '4k-1')
    # for 4k monitor
    #  <--- 25 % ---> <-------- 75 % ---------->
    # +--------------+--------------------------+
    # |   Todoist    |         WezTerm          |
    # |--------------|            &             |
    # | Cal & Logseq |           Arc            |
    # +--------------+--------------------------+
    set-window "$(window-id 'Todoist')" 2:100:0:0:25:1
    set-window "$(window-id 'カレンダー')" 2:100:0:1:25:1
    set-window "$(window-id 'Logseq')" 2:100:0:1:25:1
    set-window "$(window-id 'WezTerm')" 1:100:25:0:75:1
    set-window "$(window-id 'Arc')" 1:100:25:0:75:1
    ;;

  *)
    echo "error: unknown layout name $layout"
    usage
    exit 1
    ;;
esac
